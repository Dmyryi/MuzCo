<UserControl x:Class="MuzCoWPF.Views.Customer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuzCoWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- 📸 Фон -->
        <Image Source="/Image/BackgroundProfile.png"
               Stretch="Fill"
               Panel.ZIndex="0" />

        <!-- Основной макет -->
        <Grid Margin="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 👋 Левая карточка -->
            <Border Background="#E58F8F8F"
                    CornerRadius="25"
                    Padding="30"
                    Width="300"
                    VerticalAlignment="Center"
                   >
                <StackPanel HorizontalAlignment="Center" Height="219">
                    <TextBlock Text="Вітаємо, Даніл!"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Foreground="White" />
                    <Image Source="/Image/avatar.png"
                           Width="110"
                           Height="169"
                           Stretch="Uniform"
                           />

                    <!-- Аватар -->
                </StackPanel>
            </Border>

            <!-- Кнопки справа -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="60,0,0,0"
                        Width="250"
                       >

                <Button Content="Історія замовлень"
                        Height="50"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#E58F8F8F"
                        Foreground="White"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,10"
                 />

                <Button Content="Улюблена піца"
                        Height="50"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#E58F8F8F"
                        Foreground="White"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,10"
                       />

                <Button Content="Відгуки"
                        Height="50"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#E58F8F8F"
                        Foreground="White"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
