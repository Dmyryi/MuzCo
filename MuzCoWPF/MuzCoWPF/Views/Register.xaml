<UserControl x:Class="MuzCoWPF.Views.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuzCoWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>


        <Image Source="/Image/BackgroundAuthorization.png"
               Stretch="Fill"
               Panel.ZIndex="0" />

        <Rectangle Fill="#66000000"
                   Panel.ZIndex="1" />


        <Border Background="#CC1E1E1E"
                Width="470"
                Padding="30"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="2" Height="478"
                >

            <StackPanel>

                <Image Source="/Image/logoMuzCo.png"
                       Width="50"
                       Height="50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

                <TextBlock Text="Реєстрація"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25" />

             
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
