<Window x:Class="MuzCoWPF.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кошик"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White"
            CornerRadius="20"
         
            BorderThickness="2"
            Padding="20"
            SnapsToDevicePixels="True"
            >
        <Grid>
            <!-- ❌ Кнопка закриття -->
            <Button Content="✕"
                    Width="30" Height="30"
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    Cursor="Hand"
                    Click="Close_Click"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,40,20,20">
                <TextBlock Text="🛒 Ваше замовлення"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <ItemsControl ItemsSource="{Binding Cart}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="−"
        Width="30"
        Height="30"
        FontSize="18"
        FontWeight="Bold"
        Background="Transparent"
        BorderBrush="Transparent"
        Foreground="Black"
        Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}"/>


                                <!-- Картинка -->
                                <Border Grid.Column="1" Width="60" Height="60" Background="#EEE" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding Image}" Stretch="Uniform"/>
                                </Border>

                                <!-- Назва і опис -->
                                <StackPanel Grid.Column="2" Margin="10,0">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                </StackPanel>

                                <!-- Ціна -->
                                <TextBlock Grid.Column="3"
                           Text="{Binding Price, StringFormat='{}{0}₴'}"
                           VerticalAlignment="Center"
                           FontSize="14"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <TextBlock Text="{Binding TotalPrice, StringFormat='Загалом: {0} ₴'}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,20,0,10"
                           HorizontalAlignment="Right"/>

                <Button Content="Оформити"
                        Command="{Binding ConfirmOrderCommand}"
                        Margin="0,10,0,0"
                        Height="40"
                        Width="200"
                        HorizontalAlignment="Center"
                        Background="#FFFD573E"
                        Foreground="White"
                        FontSize="16"
                        BorderBrush="Transparent"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
