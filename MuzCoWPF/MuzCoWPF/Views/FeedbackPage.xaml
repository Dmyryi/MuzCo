<UserControl x:Class="MuzCoWPF.Views.FeedbackPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuzCoWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="🗣️ Відгуки"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,30"
                           Foreground="#F7F7F7"
                           HorizontalAlignment="Center"/>

                <ItemsControl ItemsSource="{Binding Feedbacks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#AA000000"
        CornerRadius="16"
        Padding="16"
        Margin="0,0,0,15"
        BorderBrush="#AA000000"
        BorderThickness="1">
                                <StackPanel>
                                    <TextBlock>
            <Run FontFamily="Segoe MDL2 Assets" Text="" Foreground="#AAAAAA" FontSize="12"/>
            <Run Text=" Замовлення:" Foreground="#AAAAAA" FontSize="12"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding OrderId}"
                   Foreground="#F7F7F7"
                   FontWeight="Bold"
                   Margin="0,4,0,10"
                   FontSize="14"/>

                                    <TextBlock>
            <Run FontFamily="Segoe MDL2 Assets" Text="" Foreground="#AAAAAA" FontSize="12"/>
            <Run Text=" Відгук:" Foreground="#AAAAAA" FontSize="12"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding TextMessage}"
                   Foreground="#DDDDDD"
                   FontStyle="Italic"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="0,4,0,10"/>

                                    <TextBlock Text="{Binding ReviewDate}"
                   FontSize="11"
                   Foreground="#777"
                   HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>