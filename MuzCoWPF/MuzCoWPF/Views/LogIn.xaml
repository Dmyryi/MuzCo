<UserControl x:Class="MuzCoWPF.Views.LogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   
      
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1050">
    <Grid>

   
        <Image Source="/Image/BackgroundAuthorization.png"
               Stretch="Fill"
               Panel.ZIndex="0" />

        <Rectangle Fill="#66000000"
                   Panel.ZIndex="1" />

      
        <Border Background="#CC1E1E1E"
                Width="470"
                Padding="30"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="2" Height="478"
                >

            <StackPanel>

                <Image Source="/Image/logoMuzCo.png"
                       Width="50"
                       Height="50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

                <TextBlock Text="Увійти"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25" />

                <Border Background="Black" CornerRadius="20,20,20,20" Height="40" Margin="0,0,0,30">
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
         Background="Black" 
         Foreground="White"
         BorderThickness="0"
         Margin="29,0,0,0"
         VerticalAlignment="Center"
         />

                </Border>

                <Border Background="Black" CornerRadius="20,20,20,20" Height="40" Margin="0,0,0,30">
                    <PasswordBox x:Name="PasswordBox"
             PasswordChanged="PasswordBox_PasswordChanged"
             Foreground="White"
             CaretBrush="White"
             Background="Black"
             BorderThickness="0"
             Margin="29,0,0,0"
             VerticalAlignment="Center" />
                </Border>

                <Button Content="Увійти"
              Command="{Binding LogInCommand}"
                        Background="#FFFC5C45"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="45"
                        BorderThickness="0"
                       />
                <Button Content="Реєстрація"
              Command="{Binding RegisterCommand}"
                        Background="#FFFC5C45"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="45"
                        BorderThickness="0,0,0,0" Margin="0,7,0,0"
                       />

                <Button Content="Назад"
                        Command="{Binding PizzeriaCommand}"
                                Background="#FFFC5C45"
        Foreground="White"
        FontSize="16"
        FontWeight="Bold"
        Height="45"
        BorderThickness="0" Margin="0,10,0,0"
                        />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
