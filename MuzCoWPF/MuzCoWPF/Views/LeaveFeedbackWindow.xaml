<Window x:Class="MuzCoWPF.Views.LeaveFeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuzCoWPF.Views"
        mc:Ignorable="d"
       Title="Залишити відгук" Height="230" Width="400">
    <Grid Background="#FFF0F0F0" Margin="10">
        <StackPanel>
            <TextBlock Text="Ваш відгук:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="FeedbackTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
            <Button Content="Надіслати" Margin="0,10,0,0" Height="30" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>
